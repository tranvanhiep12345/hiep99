    <script>   
    let p = +prompt('Nhập điểm môn Vật lý:')
    let c = +prompt('Nhập điểm môn Hóa học:')
    let b = +prompt('Nhập điểm môn Sinh học:')
    let S = p + c + b
    let P = (p + c + b)/3
    document.write("Tổng điểm của 3 môn là: " + S);
    document.write("Điểm trung bình của 3 môn là: " + P);
</script> 
